{
  "name": "mp3-hls-streaming",
  "version": "0.1.1",
  "description": "Stream audio HLS and MP3",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "type":"module",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Sources",
    "ios/Tests",
    "Package.swift",
    "Mp3HlsStreaming.podspec"
  ],
  "author": "Patrick Quinn",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patrickjquinn/capacitor-remote-streamer.git"
  },
  "bugs": {
    "url": "https://github.com/patrickjquinn/capacitor-remote-streamer/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "xcodebuild -scheme Mp3HlsStreaming -destination generic/platform=iOS",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- --fix --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api RemoteStreamerPlugin --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && npm run docgen && npx tsc && npx rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@capacitor/docgen": "^0.2.2",
    "@ionic/eslint-config": "^0.4.0",
    "@ionic/prettier-config": "^4.0.0",
    "@ionic/swiftlint-config": "^1.1.2",
    "eslint": "^9.7.0",
    "prettier": "~3.3.3",
    "prettier-plugin-java": "~2.6.4",
    "rimraf": "^6.0.1",
    "rollup": "^4.18.1",
    "swiftlint": "^1.0.2",
    "typescript": "^4.8.4"
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "dependencies": {
    "@capacitor/android": "^6.1.0",
    "@capacitor/core": "^6.1.0",
    "@capacitor/ios": "^6.1.0"
  }
}
